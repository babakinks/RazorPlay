@using System.Web.UI.WebControls
@model RazorPlay.Models.Product

@{
    ViewBag.Title = "DemoExpressions";
    //Layout = "~/Views/_BasicLayout.cshtml";
}

<table>
    <thead>
        <tr>
            <th>Property</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <td>Stock</td>
            <td>
                @switch ((int) ViewBag.ProductCount)
                {
                    case 0:
                        @: Out of Stock
                        break;
                   case 1:
                        <b>Low stock of (@ViewBag.ProductCount)</b>
                        break;
                default:
                        @ViewBag.ProductCount
                         break;
                }
            </td>
        </tr>
    </tbody>
</table>

<div data-discount="@ViewBag.ApplyDiscount" data-express="@ViewBag.ExpressShip" data-supplier="@ViewBag.Supplier">
    The containing element has data attributes...huh! works without this too.
</div>

Discount: <input type="checkbox" checked="@ViewBag.ApplyDiscount"/>
Express: <input type="checkbox" checked="@ViewBag.ExpressShip"/>
Supplier: <input type="checkbox" checked="@ViewBag.Supplier"/>


